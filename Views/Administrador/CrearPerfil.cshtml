@model AppWebSistemaClinica.Models.PerfilViewModel
@{
    Layout = ViewBag.Layout; // Establecer el diseño utilizando la variable ViewBag.Layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Crear Perfil</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <style>
        .w3-btn {
            width: 150px;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    <main>
        <div class="container-fluid px-4">
            <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" asp-controller="Administrador" asp-action="CrearPerfil" method="post">
                <h2 class="w3-center">Crear Perfil</h2>

                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"></div>
                    <div class="w3-rest">
                        <label>Correo para el Perfil </label>
                        <select asp-for="IdUsuario" asp-items="(SelectList)ViewBag.Correos" class="form-control">
                            <option value="">Seleccione un correo</option>
                        </select>
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                </div>

                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"></div>
                    <div class="w3-rest">
                        <label>Rol para el Perfil</label>
                        <select asp-for="IdRol" asp-items="(SelectList)ViewBag.Roles" class="form-control">
                            <option value="">Seleccione un Rol</option>
                        </select>
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>
                </div>

                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"></div>
                    <div class="w3-rest">

                        <button class="w3-button w3-block w3-section w3-green w3-round-xlarge" type="submit"
                                asp-controller="Administrador" asp-action="CrearPerfil">
                            Guardar
                        </button>
                        <a asp-controller="Administrador" asp-action="ImprimirPerfiles" class="w3-button w3-block w3-section w3-red w3-round-xlarge">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
