@model AppWebSistemaClinica.Models.UsuarioViewModel

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
                            <div class="card-body">
                                <form asp-controller="Home" asp-action="Registro" method="post">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input asp-for="NombreUsuario" class="form-control" id="inputFirstName" placeholder="Enter your first name" />
                                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                                <label for="inputFirstName">Nombre</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="ApellidoUsuario" class="form-control" id="inputLastName" placeholder="Enter your last name" />
                                                <span asp-validation-for="ApellidoUsuario" class="text-danger"></span>
                                                <label for="inputLastName">Apellido</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="CorreoElectronico" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                                        <label for="inputEmail">Correo</label>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input asp-for="ContrasenaUsuario" class="form-control" id="inputPassword" type="password" placeholder="Create a password" />
                                                <span asp-validation-for="ContrasenaUsuario" class="text-danger"></span>
                                                <label for="inputPassword">Contraseña</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input asp-for="ConfirmacionContrasena" class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password" />
                                                <span asp-validation-for="ConfirmacionContrasena" class="text-danger"></span>
                                                <label for="inputPasswordConfirm">Confirma la Contraseña</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary btn-block" asp-area="" asp-controller="Home" asp-action="Registro">Crear Cuenta</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                                         ¿Ya tienes cuenta? 
                                <div class="big"><a asp-area="" asp-controller="Home" asp-action="Acceso">Ingresa</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/js/scripts.js"></script>
